public class Main {
    public static void main(String[] args) {
        int n = 10; 
        int sum = 0;
        int a = 0;
        int b = 1;
        for (int i = 1; i <= n; i++) {
            int c = a + b;
            a = b;
            b = c;
            if (c % 2 == 0) {
                sum += c;
            }
        }
        System.out.println("Sum of even numbers in the Fibonacci series: " + sum);
    }
}
